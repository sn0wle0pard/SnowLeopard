@import "nib"
@import "_variables"

@font-face
    font-family: 'Spoqa Han Sans'
    font-weight: 700
    src local('SpoqaHanSans-Bold'), local('SpoqaHanSans-Bold'),
    url(font/SpoqaHanSans-Bold/SpoqaHanSans-Bold.eot) format('eot'),
    url(font/SpoqaHanSans-Bold/SpoqaHanSans-Bold.svg) format('svg'),
    url(font/SpoqaHanSans-Bold/SpoqaHanSans-Bold.ttf) format('truetype'),
    url(font/SpoqaHanSans-Bold/SpoqaHanSans-Bold.woff) format('woff')
@font-face
    font-family: 'Spoqa Han Sans'
    font-weight: 400
    src local('SpoqaHanSans-Regular'), local('SpoqaHanSans-Regular'),
    url(font/SpoqaHanSans-Regular/SpoqaHanSans-Regular.eot) format('eot'),
    url(font/SpoqaHanSans-Regular/SpoqaHanSans-Regular.svg) format('svg'),
    url(font/SpoqaHanSans-Regular/SpoqaHanSans-Regular.ttf) format('truetype'),
    url(font/SpoqaHanSans-Regular/SpoqaHanSans-Regular.woff) format('woff')
@font-face
    font-family: 'Spoqa Han Sans'
    font-weight: 200
    src local('SpoqaHanSans-Thin'), local('SpoqaHanSans-Thin'),
    url(font/SpoqaHanSans-Thin/SpoqaHanSans-Thin.eot) format('eot'),
    url(font/SpoqaHanSans-Thin/SpoqaHanSans-Thin.svg) format('svg'),
    url(font/SpoqaHanSans-Thin/SpoqaHanSans-Thin.ttf) format('truetype'),
    url(font/SpoqaHanSans-Thin/SpoqaHanSans-Thin.woff) format('woff')
*
    font-family: 'Spoqa Han Sans', 'Sans-serif'

*
*::before
*after
    -webkit-box-sizing: inherit
    box-sizing: inherit

html
    width: 100%
    height: 100%

body
    margin: 0
    width: 100%
    height: calc(100% - 5rem)

#content
    min-height: calc(100% - 5rem)
    margin-top: 5rem

#article
    line-height: 1.6em 

@import "_partial/article"

#article-title
    border-bottom: 1px solid color-light-grey
    padding-top: 1rem
    margin-bottom: 3rem
    > h1
        font-weight: 800
    #time
        margin-bottom: 1.5em

#post-list
    > a
        text-decoration:none
    > li
        padding: 2em 0
        border-bottom: 1px solid color-light-grey
        list-style: none
        > a
            text-decoration: none

.text-center
    text-align: center !important;

.article-comment
    margin: 0.5rem 0

@import "_util/grid"
@import "_partial/header"
@import "_partial/footer"
@import "_util/typo.styl"
