h1, h2, h3, h4, h5, h6
    margin-top: 0
    margin-bottom: .5rem
    font-fammily: inherit
    font-weight: 500
    line-height: 1.1
    color: inherit

h1
    font-size: 2.5rem
    line-height: 1.2em
    text-indent: -3px
    margin: 0.67em 0

h2, h3
    orphans: 3
    widows: 3
    page-break-after: avoid

h2
    font-size: 2rem
    line-height: 1.5em

h3
    font-size: 1.75rem

h4
    font-size: 1.5rem

h5
    font-size: 1.25rem

h6
    font-size: 1rem

blockquote
    margin-top: 10px
    margin-bottom: 10px
    padding-left: 15px
    border-left: 3px solid #ccc
